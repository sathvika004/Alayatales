# MongoDB Configuration
# For MongoDB Atlas (Cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
# For Local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/

# Default: Uses local MongoDB
MONGODB_URI=mongodb://localhost:27017/

# Database Name
DB_NAME=alayatales

# Demo Mode (set to 'true' to use mock data without MongoDB)
DEMO_MODE=false

# Application Settings
APP_SECRET_KEY=your-secret-key-here-change-in-production

# Admin Credentials (for initial setup)
ADMIN_EMAIL=admin@alayatales.com
ADMIN_PASSWORD=Admin@123

# File Upload Settings
MAX_UPLOAD_SIZE=5  # in MB per file
MAX_IMAGES_PER_TEMPLE=5  # maximum number of images per temple
ALLOWED_IMAGE_TYPES=png,jpg,jpeg,gif,webp
IMAGE_COMPRESSION_QUALITY=85  # JPEG quality (1-100)
MAX_IMAGE_DIMENSION=800  # max width/height in pixels

# Session Settings
SESSION_TIMEOUT=3600  # in seconds (1 hour)

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PUBLIC_VIEW=true
ENABLE_IMAGE_UPLOAD=true

# Cloud Storage (Optional - for production)
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

# Email Settings (Optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# API Keys (Optional - for future features)
# MAPS_API_KEY=your-google-maps-api-key
# WEATHER_API_KEY=your-weather-api-key
